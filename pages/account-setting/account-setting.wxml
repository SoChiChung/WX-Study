<!-- pages/account-setting/account-setting.wxml -->
<toast wx:if="{{ showtoastintro }}">
  <toast-input wx:if="{{ showtoastintro }}" slot="container"></toast-input>
  >
</toast>
<block wx-if="{{ isLogin }}">
  <mp-cells>
    <mp-cell link hover value="头像" link url="/pages/index/index">
      <image slot="footer" src="{{ userInfo.avatarUrl }}"></image>
    </mp-cell>
    <mp-cell link hover value="用户名">
      <text slot="footer">{{
        userInfo.nickName ? userInfo.nickName : "待完善"
      }}</text>
    </mp-cell>
    <mp-cell link hover value="介绍">
      <text bindtap="settoastintro" slot="footer" data-value="true">{{
        userInfo.intro ? userInfo.intro : "待完善"
      }}</text>
    </mp-cell>
  </mp-cells>
  <mp-cells title="   ">
    <mp-cell link hover value="性别" link url="/pages/index/index">
      <text slot="footer">{{ userInfo.gender == 1 ? "男" : "女" }}</text>
    </mp-cell>
    <mp-cell link hover value="生日">
      <picker
        slot="footer"
        mode="date"
        start="2015-09-01"
        end="{{ date }}"
        bindchange="bindDateChange"
      >
        <view class="picker">{{
          userInfo.birth ? userInfo.birth : "待完善"
        }}</view>
      </picker>
    </mp-cell>
    <mp-cell value="地区" link hover>
      <text slot="footer">{{
        userInfo.country ? userInfo.country : "待完善"
      }}</text>
    </mp-cell>
  </mp-cells>
</block>
<button
  open-type="getUserInfo"
  wx-if="{{ !isLogin }}"
  bindgetuserinfo="getUserInfoHandle"
>
  点击登录
</button>
