/* pages/index/index.wxss */
page {
    height: 100%;
    background: #8ED145;
}

.indexContainer {
    display: flex;
    flex-direction: column;
    /* 改变主抽的朝向 */
    align-items: center;
    /* 里面的元素居中 */
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    margin: 100rpx 0;
}

.userName {
    font-size: 32rpx;
    font-weight: bold
}

.goStudy {
    height: 80rpx;
    width: 220rpx;
    line-height: 80rpx;
    border: 1rpx solid black;
    font-size: 25rpx;
    text-align: center;
    border-radius: 20rpx;
    margin: 40rpx 0;
}
button{
    background: #8ED145;
    size:20rpx;
    border:1px solid black;
    border-radius: 16rpx;
}